{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"]
    },
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "agent-contracts/**/*",
    "orchestrator/**/*",
    "scripts/**/*",
    "tests/**/*",
    "components/**/*",
    "*.tsx",
    "*.ts"
  ],
  "exclude": [
    "scripts/codegen/templates/**/*"
  ]
}
