{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RateLimit Contract v1.0.0",
  "description": "Schema for platform API rate limit definitions",
  "type": "object",
  "properties": {
    "platform": {
      "type": "string",
      "enum": ["twitter", "instagram", "tiktok", "facebook", "linkedin", "youtube", "threads", "pinterest"]
    },
    "endpoint": {
      "type": "string",
      "description": "API endpoint path"
    },
    "method": {
      "type": "string",
      "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"],
      "description": "HTTP method"
    },
    "limit": {
      "type": "integer",
      "minimum": 1,
      "description": "Requests allowed in the window"
    },
    "window_seconds": {
      "type": "integer",
      "minimum": 1,
      "description": "Time window in seconds"
    },
    "auth_scope": {
      "type": "string",
      "enum": ["app", "user", "bearer"],
      "description": "Authentication scope required"
    },
    "notes": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "description": "Additional implementation notes"
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "url": { "type": ["string", "null"] },
          "retrieved_at": { "type": "string", "format": "date-time" }
        },
        "required": ["id", "title", "retrieved_at"]
      },
      "minItems": 1,
      "description": "Source citations"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version"
    }
  },
  "required": ["platform", "endpoint", "method", "limit", "window_seconds", "auth_scope", "sources", "updated_at", "version"],
  "additionalProperties": false
}
